<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadPhotos">

    <ImageView
        android:id="@+id/chosenimage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginVertical="40dp"
        android:scaleType="center">

    </ImageView>

    <Button
        android:id="@+id/choosephoto"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="42dp"
        android:text="Chose photo"
        android:layout_below="@+id/chosenimage">

    </Button>


    <Button
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/predictions"
        android:text="Get Predictions"
        android:layout_below="@+id/choosephoto">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/results"
        android:layout_below="@id/predictions">

    </TextView>




</RelativeLayout>